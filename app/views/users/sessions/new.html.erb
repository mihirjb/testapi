<div class="row">
	<div class="col-md-3">
</div>
	<div class="col-md-6">
		<div class="cushion gen-box box">

<h4>Log in</h4>
<hr/>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, :class=> " required form-control", :placeholder=>"Email address" %>
    <%= f.password_field :password, autocomplete: "off", :class=> " required form-control", :placeholder=>"Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="field actions">
    <%= f.submit "Log in", :class => "btn btn-default" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>
	<div class="col-md-3">
</div>
</div>